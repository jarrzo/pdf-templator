@using pdfTemplator.Shared.Constants.Enums
<EditForm Model="Insertable" OnValidSubmit="AddInsertable">
    <MudDialog>
        <TitleContent>
            <MudText Typo="Typo.h6">
                <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
                Add variable
            </MudText>
        </TitleContent>
        <DialogContent>
            <MudGrid>
                <MudItem xs="12" md="6">
                    <MudTextField T="string" For="@(() => Insertable.Key)" @bind-Value="Insertable.Key" Label="Key" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudSelect T="InsertableType" Label="Type" AnchorOrigin="Origin.BottomCenter" @bind-Value="Insertable.Type">
                        @foreach (InsertableType type in Enum.GetValues(typeof(InsertableType)))
                        {
                            <MudSelectItem T="InsertableType" Value="type">@type.ToString()</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>
                @if (Insertable.Type == InsertableType.Sequence)
                {
                    <MudItem xs="12">
                        @foreach (var seqElement in SequenceElements)
                        {
                            <MudTextField T="string" For="@(() => seqElement.Key)" @bind-Value="seqElement.Key" Label="Key" Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Remove" OnAdornmentClick="@(() => SequenceElements.Remove(seqElement))" />
                        }
                    </MudItem>
                    <MudButton DisableElevation Variant="Variant.Filled" OnClick="@(() => SequenceElements.Add(new() { Key = ""}))"><MudIcon Icon="@Icons.Material.Filled.Add" />Add field</MudButton>
                }
                @if (Insertable.Type == InsertableType.Table)
                {
                    <MudItem xs="12">
                        @foreach (var tableElement in TableElements)
                        {
                            <MudTextField T="string" For="@(() => tableElement.Key)" @bind-Value="tableElement.Key" Label="Key" Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Remove" OnAdornmentClick="@(() => TableElements.Remove(tableElement))" />
                        }
                    </MudItem>
                    <MudButton DisableElevation Variant="Variant.Filled" OnClick="@(() => TableElements.Add(new() { Key = ""}))"><MudIcon Icon="@Icons.Material.Filled.Add" />Add field</MudButton>
                }
                @if (Insertable.Type == InsertableType.Date)
                {
                    <MudItem xs="12">
                        <MudTextField T="string" For="@(() => DateFormat)" @bind-Value="DateFormat" Label="Date format" />
                    </MudItem>
                }
            </MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton DisableElevation Variant="Variant.Filled" OnClick="Cancel">Cancel</MudButton>
            <MudButton DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Color="Color.Success">Add</MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>