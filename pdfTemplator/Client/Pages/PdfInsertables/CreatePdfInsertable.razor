@using pdfTemplator.Shared.Constants.Enums
<EditForm Model="Insertable" OnValidSubmit="AddInsertable">
    <MudDialog>
        <TitleContent>
            <MudText Typo="Typo.h6">
                <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
                Add variable
            </MudText>
        </TitleContent>
        <DialogContent>
            <MudGrid>
                <MudItem xs="12" md="6">
                    <MudTextField T="string" For="@(() => Insertable.Key)" @bind-Value="Insertable.Key" Label="Key" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudSelect T="InsertableType" Label="Type" AnchorOrigin="Origin.BottomCenter" @bind-Value="Insertable.Type">
                        @foreach (InsertableType type in Enum.GetValues(typeof(InsertableType)))
                        {
                            <MudSelectItem T="InsertableType" Value="type">@type.ToString()</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>
            </MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton DisableElevation Variant="Variant.Filled" OnClick="Cancel">Cancel</MudButton>
            <MudButton DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Color="Color.Success">Add</MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>