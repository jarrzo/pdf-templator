<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
            Preview template
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudContainer Style="max-height: 80vh; overflow-y: scroll; background-color: #ccc;">
            <MudContainer Class="a4page">
                @((MarkupString)Template.Content)
            </MudContainer>
        </MudContainer>
    </DialogContent>
    <DialogActions>
        <MudButton DisableElevation Variant="Variant.Filled" OnClick="Cancel">Cancel</MudButton>
    </DialogActions>
</MudDialog>