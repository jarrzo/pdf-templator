    {
        <MudNavLink Href="@GetUrl(category)" Icon="@Icons.Filled.FilterList">@category.Name</MudNavLink>
    }
    <MudDivider Class="my-2" />
    <MudNavLink Href="/users" Icon="@Icons.Filled.SupervisedUserCircle">Users</MudNavLink>
</MudNavMenu>