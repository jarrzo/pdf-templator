<MudNavMenu>
    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Outlined.Home">Home</MudNavLink>
    <MudDivider Class="my-2" />
    <MudNavLink Href="/categories" Icon="@Icons.Filled.Category">Categories</MudNavLink>
    <MudNavLink Href="/fields" Icon="@Icons.Filled.TextFields">Fields</MudNavLink>
    <MudDivider Class="my-2" />
    <MudNavLink Href="/templates" Icon="@Icons.Filled.Menu">All templates</MudNavLink>
