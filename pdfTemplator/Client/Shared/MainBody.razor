@using pdfTemplator.Client.Shared.Components
@inject Microsoft.Extensions.Localization.IStringLocalizer<MainLayout> _localizer

<MudAppBar Elevation="25">
    <MudText Typo="Typo.h6" Class="ml-4"><MudIcon Icon="@Icons.Filled.PictureAsPdf" /> PDF Templator</MudText>
    <MudToolBar DisableGutters="true">
        <MudIconButton Icon="@Icons.Material.Outlined.Menu" Color="Color.Inherit" OnClick="@((e) => DrawerToggle())" Class="ml-3" />
    </MudToolBar>
    <MudSpacer />
    <LanguageSelector />
    <MudTooltip Text="@_localizer["Toggle Dark Mode"]">
        <MudIconButton Icon="@Icons.Material.Filled.Brightness4" Color="Color.Inherit" OnClick="@((e) => ToggleDarkMode())" />
    </MudTooltip>
    <MudMenu OffsetX="true" Dense="true" Class="mt-1 ml-4">
        <ActivatorContent>
            <MudAvatar Color="Color.Secondary">@FirstLetterOfUsername</MudAvatar>
        </ActivatorContent>
        <ChildContent>
            <UserCard Class="mt-n2" />
            <MudDivider Class="mb-2" />
            <MudListItem Text="@_localizer["Logout"]" Icon="@Icons.Material.Filled.Logout" OnClick="Logout" />
        </ChildContent>
    </MudMenu>
</MudAppBar>

<MudDrawer @bind-Open="_drawerOpen" Elevation="25" ClipMode="DrawerClipMode.Always">
    <NavMenu />
</MudDrawer>

<MudMainContent>
    <MudContainer MaxWidth="MaxWidth.False" Class="mt-4">
        @ChildContent
    </MudContainer>
</MudMainContent>