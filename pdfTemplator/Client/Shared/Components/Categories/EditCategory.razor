@using pdfTemplator.Shared.Constants.Enums
@using pdfTemplator.Shared.Models
<EditForm Model="CategoryParams" OnValidSubmit="AddCategory">
    <MudDialog>
        <TitleContent>

            @if (CategoryParams.Id > 0)
            {
                <MudText Typo="Typo.h6">
                    <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />Add Category
                </MudText>
            }
            else
            {
                <MudText Typo="Typo.h6">
                    <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />Edit Category
                </MudText>
            }

        </TitleContent>
        <DialogContent>
            <MudGrid>
                <MudItem xs="12">
                    <MudTextField T="string" For="@(() => CategoryParams.Name)" @bind-Value="CategoryParams.Name" Label="Key" />
                </MudItem>
            </MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton DisableElevation Variant="Variant.Filled" OnClick="Cancel">Cancel</MudButton>
            @if (CategoryParams.Id > 0)
            {
                <MudButton DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Color="Color.Success">Edit</MudButton>
            }
            else
            {
                <MudButton DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Color="Color.Success">Add</MudButton>
            }
        </DialogActions>
    </MudDialog>
</EditForm>